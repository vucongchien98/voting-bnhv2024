        <Button text="Đăng nhập" icon={{ src:"/icons/user.svg", width: 16, height: 16, class:"mr-[10px]" }} wrapperClass="text-xs flex flex-row-reverse px-6 py-[10px] rounded-[20px] bg-purple-light uppercase"/>
    </div>
